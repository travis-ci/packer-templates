#!/usr/bin/env bash

set -o errexit
set -o xtrace

main() {

   dist=$(lsb_release -cs)
   # Main update
   apt-get update -yqq
   apt-get dist-upgrade -y
   apt full-upgrade -y
   # Uninstall old kernels (yes they are still there) - use it to uninstall when needed
   if [[ "${dist}" = "focal" ]]; then
   apt-get remove -y linux-gcp-headers-5.4.0-1080 linux-modules-5.15.0-87-generic linux-modules-5.15.0-1045-gcp linux-gcp-headers-5.4.0-1116 linux-modules-5.15.0-1006-gcp linux-modules-5.15.0-84-generic linux-modules-5.15.0-1044-gcp linux-modules-5.4.0-165-generic
   apt-get install -yqq --no-install-suggests --no-install-recommends \
   linux-gcp-headers-5.4.0-1117 \
   linux-modules-5.15.0-1046-gcp \
   linux-modules-5.15.0-89-generic \
   linux-headers-generic \
   linux-image-gcp \
   linux-image-generic
   #elif [[ "${dist}" = "bionic" ]]; then
   #apt-get remove -y linux-modules-5.4.0-1080
   #apt-get install -yqq --no-install-suggests --no-install-recommends \
   #linux-modules-5.4.0-1106
   fi
   # linux-modules-5.15.0-87-generic \
   # linux-modules-5.15.0-1044-gcp \
   # linux-gcp-5.15-headers-5.15.0-1044 \
   # linux-modules-5.15.0-1044-gcp \
   # linux-gcp-headers-5.4.0-1113
   
   # Install pyenv-update plugin
   # git config --global --add safe.directory /opt/pyenv
   # cd /opt/pyenv/bin/
   # git checkout master
   # git clone https://github.com/pyenv/pyenv-update.git $(pyenv root)/plugins/pyenv-update
   # pyenv update
   # apt-get autoremove -y
   # apt-get clean -y

   # # Remove system-package installed python packages
   # apt-get remove --purge python3-setuptools -y

   # # Python update
   # wget https://bootstrap.pypa.io/get-pip.py
   # sudo python3 get-pip.py
   pip install pip-review
   pip-review --auto
   #pip install --upgrade pip pyopenssl certifi rsa pytest oauthlib testresources setuptools numpy

}

