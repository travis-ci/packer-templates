#!/usr/bin/env bash

set -o errexit

main() {
  set -o xtrace

  for u in ${DEFAULT_USERS:-vagrant ubuntu}; do
    __remove_user "${u}"
  done
}

__remove_user() {
  local u="${1}"

  if [[ "$(whoami)" == "${u}" ]]; then
    echo 'Refusing to remove myself' >&2
    return
  fi

  if ! getent passwd "${u}" &>/dev/null; then
    return
  fi

  userdel -fr "${u}" || echo "Suppressing userdel exit $?"
  groupdel "${u}" || echo "Suppressing groupdel exit $?"
}

main "$@"
